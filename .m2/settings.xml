<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                          http://maven.apache.org/xsd/settings-1.0.0.xsd">
    <profiles>
        <profile>
            <id>cf-nexus-base-url</id>
            <properties>
                <cfNexusBaseUrl>${env.MAVEN_REPO_URL}</cfNexusBaseUrl>
            </properties>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>

            <repositories>
                <repository>
                    <id>cf_nexus</id>
                    <url>${env.MAVEN_REPO_URL}/repository/maven-public</url>
                </repository>
            </repositories>

            <pluginRepositories>
                <pluginRepository>
                    <id>cf_nexus</id>
                    <name>CodeFabrik Nexus External plugin</name>
                    <url>${env.MAVEN_REPO_URL}/repository/maven-public</url>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>
    <servers>
        <server>
            <id>cf_nexus</id>
            <username>${env.MAVEN_REPO_USER}</username>
            <password>${env.MAVEN_REPO_PASS}</password>
        </server>
    </servers>
</settings>
